<!DOCTYPE html>
<html lang="cs">
<head>

    <!-- Meta info -->
    <meta charset="utf-8" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="author" content="Ondrej Slamecka, http://www.slamecka.cz" />
    <meta name="copyright" content="Ondrej Slamecka" />

    <!-- Styles -->
    <link rel="stylesheet" type="text/css" href="{$themePath}/styles/reset.css" />
    <link rel="stylesheet" type="text/css" href="{$themePath}/styles/screen.css" media="screen,projection" />

    <!--  Javascript, AJAX, jQuery -->
    <!--[if IE]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script src="{$themePath}/js/css_bs.js" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
    <script src="{$themePath}/js/jquery.nette.js" type="text/javascript"></script>
    <script src="{$themePath}/js/main.js" type="text/javascript"></script>
    
    {block #head}{/block}
    <!-- Title -->
    <title>{block #title}Login{/block} &ndash; Administration</title>

</head>
<body class="authentication" id="{block #bodyId}{/block}">

    <div id="header">

	<h1>Administration</h1>

        <div class="actionbar">
	    <a href="{$baseUri}">To site</a>
	</div>

	<div class="clear"><hr /></div>
    </div> <!-- #header -->

    <div id="panel">

	<div id="content">

	    {snippet flash}
		{foreach $flashes as $flash}<p class="flash {$flash->type}">{!$flash->message}</p>{/foreach}
	    {/snippet}

	    {include #content}

	</div> <!-- #content -->

    </div> <!-- #panel -->

    <div id="footer">
        Powered by <a href="http://coolms.slamecka.cz">CoolMS</a>
    </div>


</body>
</html>